<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.newsweather"
      android:versionCode="1"
      android:versionName="1.0">
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".NewsWeather"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    
<activity android:name="Setting"></activity>

<receiver android:name="MyWidgetProvider"
		  android:debuggable="true">
		<intent-filter>
			<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			<action android:name="com.newsweather.NewsWeather.CHANGE_CHANNEL_LIST"/>
		</intent-filter>
		<meta-data android:name="android.appwidget.provider"
			    	android:resource="@xml/widget_template" />
</receiver>

<service android:name="MyWidgetProvider$UpdateService"></service>
</application>
  <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk android:targetSdkVersion="4" android:minSdkVersion="3"/>

</manifest> 